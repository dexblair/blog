
<div class="post_index_container">
<h1 id="title">The Blog Of Champions</h1>
<h2 id="subtitle">Dexter S. Blair</h2>
<% if user_signed_in? %>
	<h2 id="p_timestamp">Signed in as... <%= current_user.email %></h2>
<% end %>

<div class="post_list">
	<% @posts.each do |post| %>
  		<h2><%= link_to post.title, post %></h2>
      <p><%= truncate post.body %></p>
  		<p id="p_timestamp"><%= time_ago_in_words post.created_at %> ago</p>
	<% end %>
</div>
<div id='controls'>			
	<% if !user_signed_in? %>
		<%= link_to 'Sign In', new_user_session_path %>
	<% end %>
			
	<% if user_signed_in? %>
		<%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
		<br />
		<%= link_to "New Post", new_post_path %>
	<% end %>
</div>
</div>